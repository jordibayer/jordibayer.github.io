---
import Section from "@/components/cv_page/Section.astro";

import { certificates } from "@cv";
---

<Section title="Certifications">
  <ul>
    {
      certificates.map(({ name, date, issuer, url }) => {
        const year = new Date(date).getFullYear();
        return (
          <li>
            <article>
              <header>
                <div>
                  <a
                    href={url}
                    target="_blank">
                    <h3>{name}</h3>
                  </a>
                  <h4>{issuer}</h4>
                </div>
                <time>{year}</time>
              </header>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article h3 {
    font-weight: 500;
    color: #111;
    text-wrap: pretty;
  }

  article h4 {
    color: #222;
    font-weight: 400;
    text-wrap: pretty;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    padding-top: 0.5rem;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
      text-wrap: nowrap;
    }
  }
</style>

