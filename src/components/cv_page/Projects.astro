---
import Section from "@/components/cv_page/Section.astro";

import { projects } from "@cv";
---

<Section title="Projects">
  <ul>
    {
      projects.map(({ url, description, highlights, name }) => {
        return (
          <li>
            <article>
              <header>
                <a
                  href={url}
                  target="_blank"
                  title={`Ver el proyecto ${name}`}>
                  <h3> {name}</h3>
                </a>
                <p>{description}</p>
              </header>
              <footer>
                {highlights.map((highlights) => {
                  return <span>{highlights}</span>;
                })}
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>
<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1.1fr));
    gap: 1rem;
  }
  article {
    border-radius: 0.5rem;
    border: 1px solid #f2f2f2;
    gap: 1rem;
    display: flex;
    flex-direction: column;
    padding: 1rem;
    height: 100%;
  }
  article header {
  }
  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
    font-size: 0.6rem;
  }
  article header {
    flex: 1;
  }
  footer span {
    background: #eee;
    border-radius: 6px;
    color: #444;
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
  article p {
    text-wrap: balance;
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 0.25rem;
  }
  article h3 {
    margin-bottom: 0.25rem;
  }
  article a {
    color: #111;
  }
  article a:hover {
    text-decoration: underline;
  }

  @media (width <= 700px) {
    ul {
      margin-inline: 0px;
    }

    article {
      border: none;
      box-shadow: 0 1px 1px #f2f2f2;
      padding: 0 0 16px 0;
    }
  }

  @media print {
    article h3 span {
      animation-name: none;
    }
  }
</style>
