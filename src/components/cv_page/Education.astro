---
import Section from "@/components/cv_page/Section.astro";
import yearFormat from "@/helpers/yearFormat";

import { education } from "@cv";
---

<Section title="Education">
  <ul>
    {
      education.map(({ institution, startDate, endDate, area, url }) => {
        const years = yearFormat(startDate, endDate);
        return (
          <li>
            <article>
              <header>
                <div>
                  <a
                    href={url}
                    target="_blank">
                    <h3>{institution}</h3>
                  </a>
                  <h4>{area}</h4>
                </div>
                <time>{years}</time>
              </header>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>
<style>
  article a {
    color: #111;
  }
  article a:hover {
    text-decoration: underline;
  }
  ul {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  article h3 {
    font-weight: 500;
    color: #111;
    text-wrap: pretty;
  }

  article h4 {
    color: #222;
    font-weight: 400;
    text-wrap: pretty;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    padding-top: 0.5rem;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
      text-wrap: nowrap;
    }
  }

  /* @media print {
    ul {
      page-break-after: always;
    }
  } */
</style>
