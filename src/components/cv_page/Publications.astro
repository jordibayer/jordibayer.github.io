---
import Section from "@/components/cv_page/Section.astro";

import { publications } from "@cv";
---

<Section title="Publications">
  <ul>
    {
      publications.map(({ name, releaseDate, publisher, url, summary }) => {
        const Year = new Date(releaseDate).getFullYear();
        const paragraphs = summary.split("\\n");
        return (
          <li>
            <article>
              <header>
                <div>
                  <a
                    href={url}
                    target="_blank">
                    <h3>{name}</h3>
                  </a>
                  <h4>{publisher}</h4>
                </div>
                <time>{Year}</time>
              </header>
              <footer>
                {paragraphs.map((paragraph) => (
                  <p>- {paragraph}</p>
                ))}
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  p {
    text-wrap: pretty;
  }
  ul {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  article a:hover {
    text-decoration: underline;
  }

  article h3 {
    font-weight: 500;
    color: #111;
    text-wrap: balance;
  }

  article h4 {
    color: #222;
    font-weight: 400;
    text-wrap: balance;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    padding-top: 0.5rem;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
      text-wrap: nowrap;
    }
  }
</style>
