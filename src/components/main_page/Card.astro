---
import RedirectIcon from "./RedirectIcon.astro";
import Link from "@/components/icons/Link.astro";
const { title, description, imgPath, alt } = Astro.props;
---

<div class="border-2 border-gray-700">
  <div class="max-w-full flex justify-center item-center pt-2">
    <img
      class="object-contain h-36 w-72 sm:h-48 sm:w-96"
      src={imgPath}
      alt={alt}
    />
  </div>
  <div class="py-2 sm:py-5 px-2 sm:px-5">
    <h1 class="flex justify-center sm:text-2xl font-bold underline text-balance">
      {title}
    </h1>
    <h2 class="text-sm sm:text-base flex flex-wrap text-justify opacity-80 py-2 text-pretty">
      {description}
    </h2>
    <div class="flex justify-center items-center">
      <RedirectIcon
        href=""
        title=""
        target="_self"
        buttonType="secondary">
        <Link class="size-4" />Access</RedirectIcon
      >
    </div>
  </div>
</div>
